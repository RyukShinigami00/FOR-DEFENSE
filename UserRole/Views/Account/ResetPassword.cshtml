@model UserRoles.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/password-strength.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-box">
        <h2>🔑 Reset Password</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <p style="color: #ccc; margin-bottom: 20px;">
            We've sent a 6-digit verification code to <strong>@Model.Email</strong>.
            <br>Enter the code and your new password below.
        </p>

        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Email" type="hidden" />

            <div class="form-group">
                <label asp-for="VerificationCode" class="control-label"></label>
                <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" maxlength="6" style="text-align: center; font-size: 24px; letter-spacing: 5px;" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                
                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" type="password" id="NewPassword" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <div class="password-input-wrapper">
                    <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm new password" type="password" />
                    <button type="button" class="password-toggle" onclick="toggleConfirmNewPassword()" title="Toggle password visibility">👁️</button>
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Didn't receive the code?</p>
            <form asp-action="ResendPasswordResetCode" method="post" style="display: inline;">
                <input name="email" value="@Model.Email" type="hidden" />
                <button type="submit" class="btn btn-secondary">Resend Code</button>
            </form>
        </div>

        <div class="text-center mt-3">
            <p><a asp-action="Login">Back to Login</a></p>
        </div>
    </div>
</div>

<script src="~/js/password-security-global.js" asp-append-version="true"></script>
<script>
    // Initialize password strength for the new password field
    document.addEventListener('DOMContentLoaded', function() {
        if (document.getElementById('NewPassword')) {
            new PasswordStrengthIndicator('NewPassword', {
                showRequirements: true,
                showToggle: true
            });
        }
    });

    function toggleConfirmNewPassword() {
        const confirmPasswordInput = document.getElementById('ConfirmNewPassword');
        const toggleButton = event.target;
        const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        confirmPasswordInput.setAttribute('type', type);
        toggleButton.innerHTML = type === 'password' ? '👁️' : '🙈';
        toggleButton.title = type === 'password' ? 'Show password' : 'Hide password';
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}