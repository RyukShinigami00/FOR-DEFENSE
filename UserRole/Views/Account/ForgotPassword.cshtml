@model UserRoles.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-box">
        <h2>🔑 Forgot Password</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        <p style="color: #ccc; margin-bottom: 20px;">
            Enter your email address and we'll send you a verification code to reset your password.
        </p>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Reset Code" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Remember your password? <a asp-action="Login">Login here</a></p>
            <p>Don't have an account? <a asp-action="Register">Register here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}