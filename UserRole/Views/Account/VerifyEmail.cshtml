@model UserRoles.ViewModels.EmailVerificationViewModel
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-box">
        <h2>Email Verification</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <p>We've sent a 6-digit verification code to <strong>@Model.Email</strong></p>
        <p>Please enter the code below to complete your registration:</p>

        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Email" type="hidden" />

            <div class="form-group">
                <label asp-for="VerificationCode" class="control-label"></label>
                <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" maxlength="6" style="text-align: center; font-size: 24px; letter-spacing: 5px;" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Verify Email" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Didn't receive the code?</p>
            <form asp-action="ResendVerificationCode" method="post" style="display: inline;">
                <input name="Email" value="@Model.Email" type="hidden" />
                <button type="submit" class="btn btn-secondary">Resend Code</button>
            </form>
        </div>

        <div class="text-center mt-3">
            <p><a asp-action="Register">Back to Registration</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}