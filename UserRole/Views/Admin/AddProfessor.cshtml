@model UserRoles.ViewModels.AddProfessorViewModel
@{
    ViewData["Title"] = "Add New Professor";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* ... existing styles ... */

    .section-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 0.75em;
        font-weight: 600;
        margin-left: 8px;
    }

    .section-available {
        background: #d1fae5;
        color: #065f46;
    }

    .section-taken {
        background: #fee2e2;
        color: #991b1b;
    }

    .option-disabled {
        color: #94a3b8;
        font-style: italic;
    }
</style>

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <h1><i class="fas fa-user-plus"></i> Add New Professor</h1>
            <p>Create a new professor account with login credentials</p>
        </div>

        <form asp-action="AddProfessor" method="post" id="professorForm">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

            <div class="form-group">
                <label asp-for="FullName">
                    <i class="fas fa-user"></i> Full Name *
                </label>
                <input asp-for="FullName" class="form-control" placeholder="Enter professor's full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">
                    <i class="fas fa-envelope"></i> Email Address *
                </label>
                <input asp-for="Email" class="form-control" type="email" placeholder="professor@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">
                        <i class="fas fa-lock"></i> Password *
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">
                        <i class="fas fa-lock"></i> Confirm Password *
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="GradeLevel">
                    <i class="fas fa-graduation-cap"></i> Assigned Grade Level *
                </label>
                <select asp-for="GradeLevel" class="form-control" id="gradeSelect" required>
                    <option value="">-- Select Grade Level --</option>
                    <option value="1">Grade 1</option>
                    <option value="2">Grade 2</option>
                    <option value="3">Grade 3</option>
                    <option value="4">Grade 4</option>
                    <option value="5">Grade 5</option>
                    <option value="6">Grade 6</option>
                </select>
                <span asp-validation-for="GradeLevel" class="text-danger"></span>
                <small class="form-text text-muted" id="gradeHint" style="display:none;">
                    <i class="fas fa-info-circle"></i> <span id="gradeHintText"></span>
                </small>
            </div>

            <div class="alert alert-info" style="background: #edf2ff; color: #1d4ed8; border-radius: 8px; padding: 15px; margin-top: 20px;">
                <i class="fas fa-info-circle"></i>
                <strong>Note:</strong> For grades 4-6, you can add specific section and subject assignments from the <em>Manage Professors</em> page after creating the account.
            </div>

            <div class="form-actions">
                <a href="@Url.Action("ManageProfessors", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Create Professor Account
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const gradeSelect = document.getElementById('gradeSelect');
    const gradeHint = document.getElementById('gradeHint');
    const gradeHintText = document.getElementById('gradeHintText');

    if (gradeSelect) {
        gradeSelect.addEventListener('change', function() {
            const gradeLevel = this.value;
            const gradeInt = parseInt(gradeLevel);

            if (!gradeLevel) {
                gradeHint.style.display = 'none';
                return;
            }

            if (gradeInt >= 1 && gradeInt <= 3) {
                gradeHintText.textContent = 'For grades 1-3, one professor handles all subjects and sections. Only ONE professor is allowed per grade level.';
                gradeHint.style.display = 'block';
            } else if (gradeInt >= 4 && gradeInt <= 6) {
                gradeHintText.textContent = 'For grades 4-6, multiple professors can be assigned. You can add specific section assignments after creating the account.';
                gradeHint.style.display = 'block';
            } else {
                gradeHint.style.display = 'none';
            }
        });
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}